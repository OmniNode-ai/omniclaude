#!/bin/bash
# pr-review-v2 - Wrapper for Pydantic-backed PR review system
# This replaces the old bash-only pr-review scripts

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
PYTHON_SCRIPT="$SCRIPT_DIR/pr_review.py"

# Check if Python script exists
if [[ ! -f "$PYTHON_SCRIPT" ]]; then
    echo "ERROR: pr_review.py not found at $PYTHON_SCRIPT" >&2
    exit 1
fi

# Pass all arguments to Python script
exec python3 "$PYTHON_SCRIPT" "$@"
