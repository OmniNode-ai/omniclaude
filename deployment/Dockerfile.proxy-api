# Dockerfile for Intelligent Context Proxy - FastAPI Entry Point
#
# This builds the FastAPI HTTP server that receives requests from Claude Code
# and publishes events to Kafka.
#
# Usage:
#   docker build -f deployment/Dockerfile.proxy-api -t omniclaude-proxy-api .
#   docker run -p 8080:8080 omniclaude-proxy-api

FROM python:3.11-slim

LABEL maintainer="OmniClaude"
LABEL description="Intelligent Context Proxy - FastAPI Entry Point"
LABEL version="1.0.0"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional dependencies for proxy
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn[standard] \
    aiokafka \
    pydantic \
    pydantic-settings

# Copy project files
COPY config/ /app/config/
COPY services/intelligent_context_proxy/ /app/services/intelligent_context_proxy/

# Set Python path
ENV PYTHONPATH=/app

# Expose FastAPI port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8080/health')"

# Start FastAPI
CMD ["uvicorn", "services.intelligent_context_proxy.main:app", "--host", "0.0.0.0", "--port", "8080"]
