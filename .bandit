[bandit]
exclude_dirs = agents/templates,agents/parallel_execution/templates,.venv,.git,__pycache__
skips = B101,B104,B108,B110,B603,B605,B607,B608

# IMPORTANT: Keep B105, B106, B107 (password checks) active everywhere!
# They are NOT in the skips list above - Bandit will still check for hardcoded passwords.
