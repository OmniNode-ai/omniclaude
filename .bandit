[bandit]
# Bandit security configuration for OmniClaude
# INI format required (not YAML)

# Exclude directories from scanning
exclude_dirs = /tests/,/venv/,/.venv/,/node_modules/,/__pycache__/,/agents/templates/,/agents/parallel_execution/templates/

# Skip specific test IDs that are false positives
# B101 - assert_used (needed in tests)
# B104 - hardcoded_bind_all_interfaces (development only)
# B108 - hardcoded_tmp_directory (controlled tmp usage)
# B201 - flask_debug_true (controlled via environment variables)
# B404 - subprocess_import (required for system calls, inputs validated)
# B603 - subprocess_without_shell_equals_true (we validate all inputs)
skips = B101,B104,B108,B201,B404,B603

# Only report medium and high severity issues
# Low severity issues (961 found) are informational but don't block CI
severity = medium

# Confidence level threshold
confidence = medium
