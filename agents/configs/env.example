# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5436
POSTGRES_DB=omninode_bridge
POSTGRES_USER=postgres
# WARNING: This is an example password for local development only
# In production, use strong passwords and secure secret management
POSTGRES_PASSWORD=omninode-bridge-postgres-dev-2024

# ONEX MCP Service Configuration
# NOTE: Replace with your ONEX MCP service host (localhost for local dev, or specific IP/hostname)
ONEX_MCP_HOST=localhost
ONEX_MCP_PORT=8151

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka Configuration
# NOTE: Expects Docker Compose service name. For local dev without Docker, use localhost:9092
KAFKA_BOOTSTRAP_SERVERS=omninode-bridge-redpanda:9092
CONSUMER_GROUP=omniclaude-codegen

# Archon Services
ARCHON_SERVER_HOST=localhost
ARCHON_SERVER_PORT=8181
ARCHON_BRIDGE_HOST=localhost
ARCHON_BRIDGE_PORT=8054
ARCHON_INTELLIGENCE_HOST=localhost
ARCHON_INTELLIGENCE_PORT=8053

# Quality Gates
QUALITY_THRESHOLD=0.8
ONEX_COMPLIANCE_THRESHOLD=0.7
REQUIRE_HUMAN_REVIEW=true

# Timeouts
ANALYSIS_TIMEOUT_SECONDS=30
VALIDATION_TIMEOUT_SECONDS=20

# Feature Flags
USE_CORE_STABLE=true
USE_ARCHON_EVENTS=false
USE_BRIDGE_EVENTS=false
USE_SPI_VALIDATORS=true
ENABLE_EVENT_DRIVEN_ANALYSIS=false
ENABLE_EVENT_DRIVEN_VALIDATION=false
ENABLE_EVENT_DRIVEN_PATTERNS=false

