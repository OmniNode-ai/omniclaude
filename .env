AI_LAB_MACBOOK_AIR=192.168.86.105
AI_LAB_OLLAMA_PORT=11434

# Service URLs
HOOK_RECEIVER_URL=http://localhost:8001
MODEL_METRICS_URL=http://localhost:8005

# Security (Development)
API_KEY=dev-api-key-omniclaude-2024
JWT_SECRET=dev-jwt-secret-key-minimum-32-characters-long-omniclaude
WEBHOOK_SIGNING_SECRET=dev-webhook-signing-secret

